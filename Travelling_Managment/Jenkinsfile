pipeline {
    agent {
        docker {
            image 'docker:latest' // This image includes Docker
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Mount Docker socket
        }
    }
    stages {
        stage('Pull Images') {
            steps {
                sh 'docker pull docker:dind'
                sh 'docker images'
            }
        }
    }
}
