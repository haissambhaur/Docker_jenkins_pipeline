pipeline {
    agent any 
    stages {
        stage('check path') {
            steps{
                sh 'pwd'
                sh 'ls -la'
            }
        }
        stage('Check docker-compose version') {
            steps {
                withEnv(['PATH+EXTRA=/usr/local/bin']) {
                    sh 'docker-compose --version'
                    sh 'docker-compose build'
                    sh 'docker-compose up'
                }
            }
        }
    }
}
