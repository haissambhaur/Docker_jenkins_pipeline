pipeline {
    agent {
        docker { image 'docker:24.0.5-cli' } // Replace with the desired version
    }
    stages {
        stage('Test Docker Compose') {
            steps {
                sh '''
                # Verify Docker CLI version
                docker --version

                # Verify Docker Compose version
                docker-compose --version
                '''
            }
        }
    }
}
