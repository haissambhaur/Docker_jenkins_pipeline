pipeline {
    agent {
        docker {
            image 'docker:latest' // This image includes Docker
            args '-e DOCKER_HOST=tcp://host.docker.internal:2375'// Mount Docker socket
        }
    }
    stages {
        stage('Pull Images') {
            steps {
                sh 'docker pull docker:dind'
                sh 'docker images'
            }
        }
    }
}
